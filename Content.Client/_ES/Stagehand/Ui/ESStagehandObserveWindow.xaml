<controls:ESStagehandObserveWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._ES.Stagehand.Ui"
    Title="{Loc 'es-observe-menu-title'}"
    SetSize="850 500"
    MinSize="650 400">
    <BoxContainer Orientation="Vertical" Margin="15 10 15 15">
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" VerticalExpand="True">
            <PanelContainer HorizontalExpand="True" VerticalExpand="True" StyleClasses="PanelDark">
                <ScrollContainer HScrollEnabled="False" HorizontalExpand="True" VerticalExpand="True" ReserveScrollbarSpace="True">
                    <BoxContainer Name="MindsContainer" Orientation="Vertical" Margin="5"/>
                </ScrollContainer>
            </PanelContainer>
            <BoxContainer Name="PlayerInfoContainer" Visible="False">
                <Control MinWidth="15"/>
                <BoxContainer Orientation="Vertical" SetWidth="300">
                    <RichTextLabel Name="NameLabel"/>
                    <BoxContainer Orientation="Horizontal">
                        <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                            <RichTextLabel Name="JobLabel"/>
                            <RichTextLabel Name="MaskLabel"/>
                            <RichTextLabel Name="TroupeLabel"/>
                        </BoxContainer>
                        <Button Name="WarpButton" Text="{Loc 'es-observe-menu-button-warp'}" HorizontalAlignment="Left" VerticalAlignment="Center" SetSize="100 40"/>
                    </BoxContainer>
                    <Control MinHeight="10"/>
                    <RichTextLabel Text="{Loc 'es-observe-menu-label-objectives'}"/>
                    <Control MinHeight="5"/>
                    <PanelContainer StyleClasses="PanelDark" HorizontalExpand="True" VerticalExpand="True">
                        <ScrollContainer HScrollEnabled="False" VerticalExpand="True" HorizontalExpand="True">
                            <BoxContainer Name="ObjectiveContainer" Orientation="Vertical" Margin="5 0"/>
                        </ScrollContainer>
                    </PanelContainer>
                </BoxContainer>
            </BoxContainer>
        </BoxContainer>
    </BoxContainer>
</controls:ESStagehandObserveWindow>
