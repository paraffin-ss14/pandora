<controls:ESVoteControl
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._ES.Voting.Ui"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:xNamespace="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:style="clr-namespace:Content.Client.Stylesheets">
    <PanelContainer.PanelOverride>
        <graphics:StyleBoxFlat BackgroundColor="{xNamespace:Static style:StyleNano.ButtonColorDisabled}" />
    </PanelContainer.PanelOverride>
    <BoxContainer Orientation="Vertical" VerticalExpand="True" Margin="10 5 10 10">
        <BoxContainer Orientation="Horizontal">
            <RichTextLabel Name="VoteNameLabel" HorizontalExpand="True" RectClipContent="True"/>
            <RichTextLabel Name="TimeLabel" HorizontalAlignment="Right"/>
        </BoxContainer>
        <ProgressBar Name="Progress" Value="0.5" MinValue="0" MaxValue="1" ModulateSelfOverride="#00ff00" HorizontalExpand="True" SetHeight="5" Margin="0 2 0 5"/>
        <GridContainer Name="OptionsContainer" Columns="2"/>
    </BoxContainer>
</controls:ESVoteControl>
